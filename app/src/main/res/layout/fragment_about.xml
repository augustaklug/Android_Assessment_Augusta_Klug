<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".ui.about.AboutFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16sp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8sp"
                android:fontFamily="@font/roboto_slab"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriptionAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginStart="16sp"
                android:layout_marginTop="8sp"
                android:layout_marginEnd="16sp"
                android:layout_marginBottom="8sp"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageGitHub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:layout_marginTop="32sp"
                android:layout_marginEnd="8sp"
                android:layout_marginBottom="8sp"
                android:contentDescription="@string/github_logo"
                android:src="@drawable/ic_iconmonstr_github_1" />

            <TextView
                android:id="@+id/txtGitHub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8sp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="32sp"
                android:autoLink="web"
                android:fontFamily="@font/roboto_slab"
                android:minHeight="48dp"
                android:text="@string/github"
                android:textColor="@color/primaryTextColor"
                android:textColorLink="@color/primaryDarkColor"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>